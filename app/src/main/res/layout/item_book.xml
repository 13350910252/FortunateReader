<?xml version="1.0" encoding="utf-8"?>
<com.yinp.tools.shap_view.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:oneBg="@color/white"
    app:radius="8"
    app:state="pressed">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_90dp"
        android:background="@mipmap/default_book" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="@dimen/_6dp"
        android:paddingTop="@dimen/_6dp"
        android:paddingEnd="@dimen/_6dp"
        android:paddingBottom="@dimen/_6dp"
        android:textSize="@dimen/textSize_16sp"
        tools:text="标题" />
</com.yinp.tools.shap_view.ShapeLinearLayout>